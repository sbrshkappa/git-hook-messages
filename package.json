{
  "name": "dev-workflow-notifier",
  "version": "1.0.0-beta.1",
  "description": "A lightweight utility to add friendly or informative messages during git operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "install-hooks": "node dist/cli.js install",
    "uninstall-hooks": "node dist/cli.js uninstall",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "git",
    "hooks",
    "pre-commit",
    "pre-push",
    "developer-tools",
    "workflow",
    "team-norms",
    "git-hooks",
    "commit-hooks",
    "development-workflow"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbrshkappa/git-hook-messages.git"
  },
  "bugs": {
    "url": "https://github.com/sbrshkappa/git-hook-messages/issues"
  },
  "homepage": "https://github.com/sbrshkappa/git-hook-messages#readme",
  "dependencies": {
    "commander": "^8.3.0",
    "js-yaml": "^4.1.0",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "git-hook-messages": "dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  }
}
