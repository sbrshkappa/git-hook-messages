{
  "name": "git-hook-messages",
  "version": "1.0.0",
  "description": "A lightweight utility to add friendly or informative messages during git operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "git-hook-messages": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "install-hooks": "node dist/cli.js install",
    "uninstall-hooks": "node dist/cli.js uninstall",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "git",
    "hooks",
    "pre-commit",
    "pre-push",
    "developer-tools",
    "workflow",
    "team-norms",
    "git-hooks",
    "commit-hooks",
    "development-workflow"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbrshkappa/git-hook-messages.git"
  },
  "bugs": {
    "url": "https://github.com/sbrshkappa/git-hook-messages/issues"
  },
  "homepage": "https://github.com/sbrshkappa/git-hook-messages#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "simple-git-hooks": "^2.9.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
